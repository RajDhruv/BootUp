<%at_action||=nil%>
<%case from%>
<%when :destroy%>
	document.getElementById("communities_nav").click();
<%when :create%>
	$("#view_id").html("<%=@club.name%>");
	$("#main-timeline").html("<%=j render partial:'show'%>");
<%when :edit%>
	$("#view_id").html("Update Club");
	$("#main-timeline").html("<%=j render partial:'form',locals:{community:@club,action: :update}%>");
<%when :join_public%>
	document.getElementById("communities_nav").click();
<%when :show%>
	$("#view_id").html("<%=@club.name%>");
	$("#main-timeline").html("<%=j render partial:'show'%>");
<%when :owned_club%>
	$('a').removeClass("active");
	$("#owned").addClass("active");
	$("#myTabContent").html("<%=j render 'communities',clubs:@owned_clubs%>");
<%when :private_club%>
	$('a').removeClass("active");
	$("#private").addClass("active");
	$("#myTabContent").html("<%=j render 'communities',clubs:@all_private_communities%>");
<%when :public%>
	$('a').removeClass("active");
	$("#public").addClass("active");
	$("#myTabContent").html("<%=j render 'communities',clubs:@all_public_communities%>");
<%when :index%>
	$("#view_id").html("Choose Club");
	$('#communities_nav').parent().addClass("active");
	$("#communities_nav").addClass("active");
	$("#main-timeline").html("<%=j render partial:'index'%>");
	$("#index").addClass("active");
<%when :new%>
	$("#view_id").html("Create Club");
	$("#main-timeline").html("<%=j render partial:'form',locals:{community:@community,action: :create}%>");
<%end%>
<%if notice%>
	new Noty({
		timeout: 1000,
		type: '<%=type rescue "success"%>',
		layout: 'topCenter',
		text: '<%=notice%>'
	}).show();
<%end%>