<%
case notification.notifiable.class.to_s
when "Club"
	message = "#{notification.actor.display_name} #{notification.action} #{notification.notifiable.name}"
	path = community_path(notification.notifiable)
when "User"
	message = "#{notification.actor.display_name} #{notification.action}"
	path = profile_path(notification.notifiable)
end
%>
<%=link_to message,path,class:"dropdown-item",remote:true%>