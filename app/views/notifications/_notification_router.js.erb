<%if notice%>
	new Noty({
		timeout: 1000,
		type: '<%=type rescue "success"%>',
		layout: 'topCenter',
		text: '<%=notice%>'
	}).show();
<%end%>
<%case from%>
<%when :seen%>
	$('#notification_count').html("0");
<%when :index%>
	$("#view_id").html("Notifications");
	$("#main-timeline").html("<%=j render partial:'index'%>");
	$("#notification_button").click();
<%end%>

<%=render 'notifications/notification_panel'%>