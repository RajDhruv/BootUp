<%my_profile = (current_user == @user)%>
<style type="text/css">
.bgimg {
    background: url("<%=cover_display_image(current_user)%>") no-repeat;
    background-size: cover;
}
.img-circle {
  border-radius: 50%;
}
.profile-card-image{
      height: 200px !important;
}
</style>

<div class="card card-user text-center">
<div class="card-image profile-card-image">
    <img id="cover_picture" src="<%=cover_display_image(current_user)%>" alt="..." style="background-image:url('https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400');background-repeat: no-repeat;" alt="...">
</div>

<div class="card-body">
<div class="author">
                <img id="profile_picture" class="avatar border-gray" src="<%=profile_display_image(current_user)%>" alt="..." style="background-image:url('<%=asset_path('default_logos/default_profile.png')%>');background-repeat: no-repeat;"/>
                </div>
    <span>
    <center>
        <h3 class="media-heading"><small><%=@user.email%></small></h3>
          <i>"<%=bio_display(@user)%>"</i>
        <br>
    </center>
    </span>
    <span>
        <div class="btn-group dropdown">
          <button type="button" class="btn btn-outline-secondary disabled">
            <%= my_profile ? "Post" : "Action"%>
          </button>
          <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">Toggle Dropright</span>
          </button>
          <div class="dropdown-menu">
            <!-- Dropdown menu links -->
            <span id="user_<%=@user.id%>">
            <%if !my_profile%>
              <%unless current_user.friends_with?(@user) || current_user.blocked_friends.include?(@user)%>  
                  <%= render 'before_friend_action_buttons'%>
              <%else%>
                <%= render 'after_friend_action_buttons'%>
              <%end%>
            <%else%>
                <%= render 'shared/new_post'%>
            <%end%>
            </span>
            
          </div>
        </div>
        <%if !my_profile && (current_user.friends_with?(@user) || current_user.blocked_friends.include?(@user))%>
        &nbsp;
          <div class="btn-group dropdown">
            <button type="button" class="btn btn-outline-secondary disabled">
              <%="Post"%>
            </button>
            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="sr-only">Toggle Dropright</span>
            </button>
            <div class="dropdown-menu">
              <!-- Dropdown menu links -->
              <span id="user_<%=@user.id%>">
                  <%= render 'shared/new_post'%>
              </span>
            </div>
          </div>
        <%end%>
    </span>
</div>
</div>
<%=render 'shared/timeline'%>

