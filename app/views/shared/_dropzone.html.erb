<div id="mydropzone" style="width: 80%;min-height: 20vh;">
	
</div>

<script type="text/javascript">
$("#mydropzone").dropzone({
    url: "<%=url%>",
    addRemoveLinks : false,
    maxFilesize: 5,
    maxFiles:1,
    dictResponseError: 'Error uploading file!',
    headers: {
        'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
    }
}).html("<div class='dz-default dz-message'><span><span class='deboss'>Drag and Drop File Here </span>/ <span class='dz-clickable' id='browsebtn'>Browse</span></span></div>");
$('#mydropzone').addClass("dropzone");
</script>